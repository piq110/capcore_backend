# Wallet Encryption Key (REQUIRED for production)
# Generate a secure 64-character hex string for production use
# You can generate one using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
WALLET_ENCRYPTION_KEY=your_64_character_hex_encryption_key_here

# Blockchain RPC URLs
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
ETHEREUM_TESTNET_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_KEY

BSC_RPC_URL=https://bsc-dataseed.binance.org/
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/

TRON_RPC_URL=https://api.trongrid.io
TRON_TESTNET_RPC_URL=https://api.shasta.trongrid.io
TRON_API_KEY=your_trongrid_api_key

# Tron Private Key (for TronWeb initialization only, not for user wallets)
TRON_PRIVATE_KEY=your_tron_private_key_for_initialization
